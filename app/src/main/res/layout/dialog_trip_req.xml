<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background2">

    <TextView
        android:id="@+id/welcome4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:fontFamily="serif"
        android:gravity="center"
        android:text="لديك طلب جديد"
        android:textColor="@color/colorPrimary"
        android:textSize="24dp"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentRight="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:id="@+id/close"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/close"
        app:tint="@color/colorPrimaryDark" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:id="@+id/card1"
        app:cardCornerRadius="10dp"
        android:layout_marginLeft="25dp"
        android:elevation="15dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="25dp"
        android:layout_below="@+id/welcome4"
        android:layout_height="60dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@color/colorPrimaryDark"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="50dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_baseline_person_24"
                android:layout_marginRight="5dp"
                android:id="@+id/person"
                android:layout_height="match_parent"
                app:tint="@color/black" />

            <TextView
                android:layout_width="match_parent"
                android:id="@+id/txvType"
                android:layout_toLeftOf="@+id/person"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:fontFamily="serif"
                android:textSize="18dp"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="@color/black"
                android:layout_height="match_parent"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:id="@+id/card2"
        app:cardCornerRadius="10dp"
        android:layout_marginLeft="25dp"
        android:elevation="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="25dp"
        android:layout_below="@+id/card1"
        android:layout_height="60dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@color/colorPrimaryDark"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="50dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/phone"
                android:layout_marginRight="5dp"
                android:id="@+id/phone"
                android:layout_height="match_parent"
                app:tint="@color/black" />

            <TextView
                android:id="@+id/txvModel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@+id/phone"
                android:fontFamily="serif"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:textStyle="bold" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:id="@+id/card3"
        app:cardCornerRadius="10dp"
        android:layout_marginLeft="25dp"
        android:elevation="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="25dp"
        android:layout_below="@+id/card2"
        android:layout_height="60dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@color/colorPrimaryDark"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="50dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/path"
                android:layout_marginRight="5dp"
                android:id="@+id/loc"
                android:layout_height="match_parent"
                app:tint="@color/black" />

            <TextView
                android:id="@+id/txvColor"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@+id/loc"
                android:fontFamily="serif"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:textStyle="bold" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:id="@+id/card4"
        app:cardCornerRadius="10dp"
        android:layout_marginLeft="25dp"
        android:elevation="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="25dp"
        android:layout_below="@+id/card3"
        android:layout_height="60dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@color/colorPrimaryDark"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="50dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/disc2"
                android:layout_marginRight="5dp"
                android:id="@+id/disc"
                android:layout_height="match_parent"
                app:tint="@color/black" />

            <TextView
                android:id="@+id/txvNo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:fontFamily="serif"
                android:textSize="18dp"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="@color/black"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@+id/disc" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/lin3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/card4"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="25dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginRight="12dp"
            android:layout_weight="1"
            android:background="@drawable/btn_back22"
            android:backgroundTint="@color/red"
            android:fontFamily="serif"
            android:gravity="center"
            android:text="رفض"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginLeft="13dp"
            android:layout_weight="1"
            android:background="@drawable/btn_back22"
            android:fontFamily="serif"
            android:gravity="center"
            android:backgroundTint="@color/green1"
            android:text="قبول"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textStyle="bold" />

    </LinearLayout>

</RelativeLayout>