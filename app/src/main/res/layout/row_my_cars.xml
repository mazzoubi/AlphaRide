<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/lin1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:id="@+id/txvModel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:minHeight="40dp"
            android:layout_marginRight="5dp"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:layout_weight="1"
            android:background="@drawable/btn_back"
            android:fontFamily="serif"
            android:gravity="center"
            android:text="سنة الصنع"
            android:textColor="@color/colorPrimary"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txvType"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:minHeight="40dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:background="@drawable/btn_back"
            android:fontFamily="serif"
            android:gravity="center"
            android:text="نوع المركبة"
            android:textColor="@color/colorPrimary"
            android:textSize="18dp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/lin2"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_below="@+id/lin1"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        android:weightSum="2"
        android:gravity="center"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txvColor"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@drawable/btn_back"
            android:layout_height="wrap_content"
            android:minHeight="40dp"
            android:layout_marginRight="5dp"
            android:fontFamily="serif"
            android:textStyle="bold"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:gravity="center"
            android:text="لون المركبة"
            android:textColor="@color/colorPrimary"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/txvNo"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:layout_height="wrap_content"
            android:minHeight="40dp"
            android:fontFamily="serif"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:textStyle="bold"
            android:background="@drawable/btn_back"
            android:gravity="center"
            android:text="رقم المركبة"
            android:textColor="@color/colorPrimary"
            android:textSize="18dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/lin3"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_below="@+id/lin2"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        android:weightSum="3"
        android:gravity="center"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@drawable/btn_back22"
            android:layout_height="40dp"
            android:fontFamily="serif"
            android:textStyle="bold"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:text="صورة أمامية"
            android:textColor="@color/black"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@drawable/btn_back22"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:fontFamily="serif"
            android:textStyle="bold"
            android:gravity="center"
            android:text="رخصة السائق"
            android:textColor="@color/black"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:layout_height="40dp"
            android:fontFamily="serif"
            android:textStyle="bold"
            android:background="@drawable/btn_back22"
            android:gravity="center"
            android:text="رخصة المركبة"
            android:textColor="@color/black"
            android:textSize="18dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/txvColor3"
        android:layout_width="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_height="40dp"
        android:fontFamily="serif"
        android:textStyle="bold"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/lin3"
        android:text=""
        android:textColor="@color/colorPrimary"
        android:textSize="18dp" />

</RelativeLayout>